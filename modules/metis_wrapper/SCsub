# SCsub

Import('env')

env_metis_wrapper = env.Clone()
env_metis_wrapper.add_source_files(env.modules_sources, "*.cpp") # Add all cpp files to the build

# These paths are relative to /modules/metis_wrapper/
env_metis_wrapper.Append(CPPPATH=["include"])

# LIBPATH and LIBS need to be set on the real "env" (not the clone)
# to link the specified libraries to the Godot executable.

# This is a path relative to /modules/metis_wrapper/ where your .a libraries reside.
# If you are compiling the module externally (not in the godot source tree),
# these will need to be full paths.
env.Append(LIBPATH=['#modules/metis_wrapper/lib'])

# Check with the documentation of the external library to see which library
# files should be included/linked.
env.Append(LIBS=['metis'])
